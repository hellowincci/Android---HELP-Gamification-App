<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bmc304.wincci.bmc304gamificationapp.PostActivity">


    <ImageButton
        android:id="@+id/imageSelect"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/add_images"/>

    <EditText
        android:id="@+id/post_titleField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/post_descField"
        android:layout_below="@+id/imageSelect"
        android:layout_margin="10dp"
        android:background="@drawable/input_outline"
        android:hint="Post Title"
        android:inputType="textPersonName"
        android:padding="15dp"/>


    <EditText
        android:id="@+id/post_descField"
        android:layout_width="match_parent"
        android:layout_height="170dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_titleField"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_outline"
        android:hint="Post Description"
        android:inputType="textMultiLine"
        android:padding="15dp"/>

    <Button
        android:id="@+id/post_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/post_descField"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:text="SUBMIT POST"/>


</LinearLayout>
